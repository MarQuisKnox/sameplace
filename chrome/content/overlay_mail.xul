<!DOCTYPE overlay>
<overlay id="sameplace-overlay"
         xmlns="http://www.mozilla.org/keymaster/gatekeeper/there.is.only.xul">

  <!-- SCRIPTS -->

  <script type="application/x-javascript" src="chrome://xmpp4moz/content/xmpp.js"/>
  <script type="application/x-javascript" src="overlay.js"/>
  <script type="application/x-javascript" src="overlay_mail.js"/>

  <!-- COMMANDS -->

  <commandset id="mailCommands">
    <command id="sameplace-command-toggle-sidebar"
             label="Toggle"
             oncommand="sameplace.toggleSidebar();"
             accesskey="T"/>
    <command id="sameplace-command-load-sidebar"
             label="SamePlace"
             oncommand="sameplace.loadSidebar();"
             accesskey="S"/>
    <command id="sameplace-command-open-standalone"
             label="Open Standalone (EXPERIMENTAL)"
             accesskey="S"
             oncommand="window.open(
                        'chrome://sameplace/content/standalone/contacts.xul',
                        'SamePlace:Contacts', 'chrome,titlebar=no,toolbar=no');"/>
    <command id="sameplace-command-load-sidebar-force"
             oncommand="sameplace.loadSidebar(true);"/>
  </commandset>

  <!-- KEYS -->

  <keyset id="mailKeys">
    <key id="sameplace-key-focus-status"
         key="t"
         modifiers="control alt"
         phase="capture"
         oncommand="sameplace.getSidebarContent().focusStatus();"/>
    <key id="sameplace-key-toggle-sidebar"/>
    <key keycode="VK_F12" modifiers="control" command="sameplace-command-load-sidebar-force"/>
  </keyset>

  <!-- MENUS -->

  <menupopup id="xmpp-menu-main">
    <menu label="SamePlace" accesskey="S" insertbefore="xmpp-menu-applications-separator">
      <menupopup>
        <menuitem command="sameplace-command-toggle-sidebar"
                  key="sameplace-key-toggle-sidebar"
                  class="menuitem-iconic"/>
        <menuitem command="sameplace-command-open-standalone"
                  class="menuitem-iconic"/>
      </menupopup>      
    </menu>
  </menupopup>

  <menupopup id="xmpp-popup-accounts-secondary">
    <menuitem label="Toggle SamePlace"
              key="sameplace-key-toggle-sidebar"
              class="menuitem-iconic"
              insertafter="xmpp-menu-set-status"
              oncommand="sameplace.toggleSidebar();
                         event.stopPropagation();"/>
  </menupopup>

  <hbox id="mailContent">

    <!-- SIDEBAR -->
    
    <vbox id="folderPaneBox"> 	
      <splitter id="sameplace-splitter-left"
                class="sameplace-splitter"
                persist="state"
                state="open"
                collapse="after"
                resizebefore="closest"
                resizeafter="closest"
                hidden="true"/>
      <vbox flex="1" id="sameplace-area-left"
            class="sameplace-area"
            collapsed="true"
            persist="height"
            height="400">
        <iframe id="sameplace-toolbox-left"
                class="sameplace-toolbox"
                src="toolbox.xul"
                collapsed="true"/>
        <iframe id="sameplace-contacts-left"
                class="sameplace-contacts"
                src="about:blank"
                collapsed="true"
                flex="1"/>
        <splitter hidden="true" orient="vertical" resizeafter="farthest"/>
        <iframe id="sameplace-conversations-left"
                class="sameplace-conversations"
                src="about:blank"
                collapsed="true"
                persist="height"
                flex="1"/>
      </vbox>
    </vbox>

    <!-- AREAS -->

    <splitter id="sameplace-splitter-middle"
              class="sameplace-splitter"
              insertafter="folderpane_splitter"
              state="open"
              resizebefore="closest"
              resizeafter="closest"
              hidden="true"/>
    
    <vbox id="sameplace-area-middle"
          class="sameplace-area"
          insertafter="folderpane_splitter"
          collapsed="true"
          persist="width"
          width="300"
          minwidth="80">
      <iframe id="sameplace-toolbox-middle"
              class="sameplace-toolbox"
              src="toolbox.xul"
              collapsed="true"/>
      <iframe id="sameplace-contacts-middle"
              class="sameplace-contacts"
              src="about:blank"
              collapsed="true"
              flex="1"/>
      <splitter hidden="true" orient="vertical" resizeafter="farthest"/>
      <iframe id="sameplace-conversations-middle"
              class="sameplace-conversations"
              src="about:blank"
              collapsed="true"
              persist="height"
              flex="1"/>
    </vbox>

    <splitter id="sameplace-splitter-right"
              class="sameplace-splitter"
              state="open"
              resizebefore="closest"
              resizeafter="closest"
              hidden="true"/>
    
    <vbox id="sameplace-area-right"
          class="sameplace-area"
          collapsed="true"
          persist="width"
          width="300"
          minwidth="80">
      <iframe id="sameplace-toolbox-right"
              class="sameplace-toolbox"
              src="toolbox.xul"
              collapsed="true"/>
      <iframe id="sameplace-contacts-right"
              class="sameplace-contacts"
              src="about:blank"
              collapsed="true"
              flex="1"/>
      <splitter hidden="true" orient="vertical" resizeafter="farthest"/>
      <iframe id="sameplace-conversations-middle"
              class="sameplace-conversations"
              src="about:blank"
              collapsed="true"
              persist="height"
              flex="1"/>
    </vbox>
  </hbox>

  <vbox id="expandedHeaders">
    <mail-emailheaderfield id="expandedPresence"
                           label="Presence:"
                           collapsed="true"
                           availability="unavailable"/>
  </vbox>

  <box id="messagesBox">
    <tabs id="sameplace-tabs" insertafter="messagepanebox" collapsed="true"
          closebutton="true" mode="fake">
      <tab label="Mail" class="mail"/>
    </tabs>

    <deck id="sameplace-deck" insertafter="messagepanebox" collapsed="true">
      <spacer/>
    </deck>
  </box>
</overlay>
