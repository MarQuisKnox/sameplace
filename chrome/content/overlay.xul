<!DOCTYPE overlay>
<overlay id="samepage-overlay"
         xmlns="http://www.mozilla.org/keymaster/gatekeeper/there.is.only.xul">

  <!-- SCRIPTS -->

  <script type="application/x-javascript" src="overlay.js"/>

  <!-- COMMANDS -->

  <commandset id="mainCommandSet">
    <command id="mozeskine-command-toggle-sidebar"
             label="Toggle Mozeskine"
             oncommand="mozeskineToggleSidebar();"/>
    <command id="mozeskine-command-reload-application"
             label="Reload Mozeskine"
             oncommand="document
                        .getElementById('mozeskine-sidebar')
                        .firstChild
                        .contentDocument
                        .location.href = 'chrome://mozeskine/content/mozeskine.xul'"/>
    <command id="mozeskine-command-open"
             label="Open/Close Mozeskine..."
             accesskey="s"
             oncommand="window.open('chrome://mozeskine/content/mozeskine.xul', 'mozeskine', 'chrome');"/>
  </commandset>

  <!-- KEYS -->

  <keyset id="mainKeyset">
    <key keycode="VK_F12" modifiers="shift" command="mozeskine-command-toggle-sidebar"/>
    <key keycode="VK_F12" command="mozeskine-command-reload-application"/>
  </keyset>

  <!-- MENUS -->

  <menupopup id="menu_ToolsPopup">
    <menuitem position="1" command="mozeskine-command-toggle-sidebar"/>
  </menupopup>

  <!-- SIDEBAR OVERLAY -->

  <hbox id="browser">
    <vbox id="mozeskine-sidebar"
          insertbefore="appcontent"
          class="chromeclass-extracontent"
          collapsed="false"
          persist="width collapsed"
          width="500">
      <iframe src="chrome://mozeskine/content/"
              class="box-inset"
              flex="1"/>
    </vbox>

    <splitter id="mozeskine-splitter"
              insertbefore="appcontent"
              state="open"
              collapse="before"
              resizebefore="closest"
              resizeafter="closest"
              class="chromeclass-extracontent"
              hidden="false"/>
  </hbox>

  <!-- TOOLBAR -->
 
  <toolbox id="navigator-toolbox">
    
    <toolbar id="mozeskine-toolbar" toolbarname="Mozeskine Toolbar" 
             class="chromeclass-toolbar" context="toolbar-context-menu" 
             hidden="false" persist="hidden"
             fullscreentoolbar="true">            
      <toolbarbutton class="chromeclass-toolbar-additional"
                     command="mozeskine-command-toggle-sidebar"
                     flex="0"/>
      <toolbarseparator/>

      <toolbaritem flex="1" align="center">
        <label id="mozeskine-last-message" crop="end" value="" flex="1"/>
      </toolbaritem>
      
      <toolbarspring/>
    </toolbar>
  </toolbox>
</overlay>
