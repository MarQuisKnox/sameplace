<!DOCTYPE dialog SYSTEM "chrome://sameplace/locale/open_conversation.dtd">

<?xml-stylesheet href="chrome://global/skin/" type="text/css"?>
<?xul-overlay href="chrome://xmpp4moz/content/ui/accounts.xul"?>

<dialog id="main"
	xmlns="http://www.mozilla.org/keymaster/gatekeeper/there.is.only.xul"
        title="&dialog.title;"
        ondialogaccept="return doOk();"
        ondialogcancel="return doCancel();"
        onload="init();">

  <script type="application/x-javascript" src="chrome://xmpp4moz/content/xmpp.js"/>
  <script type="application/x-javascript" src="lib/namespaces.js"/>
  <script type="application/x-javascript" src="lib/utilities_xmpp.js"/>
  <script type="application/x-javascript" src="open_conversation.js"/>

  <dialogheader id="header" title="&dialog.title;"/>

  <grid flex="1">
    <columns>
      <column/>
      <column flex="1"/>
    </columns>

    <rows>
      <row align="center">
        <label value="&contact_address.label;"
               accesskey="&contact_address.accesskey;"
               control="address"/>
        <textbox id="address" oninput="refresh();"/>
      </row>

      <row align="center">
        <label value="&user_account.label;"
               accesskey="&user_account.accesskey;"
               control="accounts"/>
        <menulist id="account" flex="1" label="" sizetopopup="none">
          <menupopup id="xmpp-popup-accounts"/>
        </menulist>
      </row>
    </rows>
  </grid>
</dialog>
